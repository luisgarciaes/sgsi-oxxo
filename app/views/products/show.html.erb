<div class="container">
  <div class="h1">Product list</div class="h1">
  <% Product.all.each do |product| %>
    <div class="row">
      <div class="col">
        <%= product.name%>
      </div>
      <div class="col">
        <a><%=link_to 'Edit', edit_product_path(product)%></a>
      </div>
      <div class="col">
        <%=button_to 'Remove', product_path(product), method: :delete, class: 'btn btn-link p-0'%>
      </div>
    </div>
  <% end %>
</div>
