<div class="container mt-5">
  <div class="h1">Product list</div class="h1">
    <%=link_to 'Add...', new_product_path%>
  <% Product.all.each do |product| %>
    <div class="row mb-2 pb-2">
      <div class="col">
        <%= product.name%>
      </div>
      <div class="col">
        <%=link_to 'Edit', edit_product_path(product), class: 'btn btn-primary'%>
      </div>
      <div class="col">
        <%=button_to 'Remove', product_path(product), method: :delete, class: 'btn btn-danger'%>
      </div>
    </div>
  <% end %>
</div>
