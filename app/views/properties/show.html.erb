<div class="container mt-5">
  <div class="h1">Property list</div class="h1">
  <%=link_to 'Add...', new_property_path%>
  <% Property.all.each do |property|%>
    <div class="row mb-2 pb-2">
      <div class="col">
        <%= property.name%>
      </div>
      <div class="col">
        <%=link_to 'Edit', edit_property_path(property), class: 'btn btn-primary'%>
      </div>
      <div class="col">
        <%=button_to 'Remove', property_path(property), method: :delete, class: 'btn btn-danger'%>
      </div>
    </div>
  <% end %>
</div>
