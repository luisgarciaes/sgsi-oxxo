<div class="container">
  <div class="h1">Employee list</div class="h1">
  <% Employee.all.each do |employee| %>
    <div class="row">
      <div class="col">
        <%= employee.name%>
      </div>
      <div class="col">
        <a><%=link_to 'Edit', edit_employee_path(employee)%></a>
      </div>
      <div class="col">
        <%=button_to 'Remove', employee_path(employee), method: :delete, class: 'btn btn-link p-0'%>
      </div>
    </div>
  <% end %>
</div>
